<section class="container mx-auto"> 
  <div class="w-full max-w-xs mx-auto pt-20">
  <form method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mx-auto">
    <p class="text-red-500 text-lg italic py-2">Please choose a password.</p>

    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="email" >
       Email
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" name="email" placeholder="abcde@gmail.com">
    </div>
       <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
        User Name
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" name="username" placeholder="User Name">
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" name="password" placeholder="******************">
    </div>
    <div class="flex items-center justify-between">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Register
      </button>
      <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/login">
        Already have account 
      </a>
    </div>
  </form>
  <p class="text-center text-gray-500 text-xs">
    &copy;2020 Acme Corp. All rights reserved.
  </p>
  </div>
</section>
